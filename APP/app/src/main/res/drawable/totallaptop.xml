        android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#E9EDF0" />
            <corners
                android:bottomLeftRadius="20dp"
                android:topLeftRadius="20dp"
                android:bottomRightRadius="20dp"></corners>
        </shape>
    </item>

</layer-list>